  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label :account_id, "Account" %><br />
    <%= f.select :account_id, @accounts.collect{ |a| [a.name, a.id] }, { :include_blank => true } %>
